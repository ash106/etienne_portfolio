<header class="row">
  <h1 class="text-center">Etienne Arent</h1>
</header>

<div class="row text-center">
  <div class="col-xs-4 heading">
    <h3>Videos</h3>
  </div>
  <div class="col-xs-4 heading">
    <h3>Photos</h3>
  </div>
  <div class="col-xs-4 heading">
    <h3>About</h3>
  </div>
</div>

<div class="row">
  <div class="col-xs-4" id="left">
    <% @videos.each do |video| %>
      <%= link_to video["vimeo_url"], class: "fancybox-media" do %>
        <span class="overlay center-block"></span>
        <%= image_tag video["thumbnail_url"], class: "img-responsive" %>
      <% end %>
    <% end %>
  </div>   
  <div class="col-xs-4" id="middle">
    <% @photos.each do |photo| %>
      <%= link_to photo.image.url(:original), class: "fancybox", rel: "photos" do %>
        <span class="overlay center-block"></span>
        <%= image_tag photo.image.url(:large), class: 'img-responsive' %>
      <% end %>
    <% end %>
  </div>
  <div class="col-xs-4" id="right">
    <% @about.each do |photo| %>
      <%= link_to photo.image.url(:original), class: "fancybox", rel: "photos" do %>
        <span class="overlay center-block"></span>
        <%= image_tag photo.image.url(:large), class: 'img-responsive' %>
      <% end %>
    <% end %>
  </div>
</div>

<footer class="row text-center">
  <p>Information</p>
</footer>
